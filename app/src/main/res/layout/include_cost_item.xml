<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_size"
    android:background="@color/colorWhite">
        <TextView
            android:id="@+id/list_item_paycounter_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/horizontal_margin_16"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/list_item_paycounter_subcategory_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/vertical_margin_8"
            android:layout_marginLeft="@dimen/horizontal_margin_16"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/list_item_paycounter_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorGrey"
            android:layout_marginRight="@dimen/horizontal_margin_16"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:fontFamily="sans-serif-condensed"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/list_item_paycounter_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/vertical_margin_8"
            android:layout_marginLeft="@dimen/horizontal_margin_8"
            android:layout_marginRight="@dimen/horizontal_margin_16"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/colorDarkGreen"
            android:textSize="18sp"/>
</RelativeLayout>