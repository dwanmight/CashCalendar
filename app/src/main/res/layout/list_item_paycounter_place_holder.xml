<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/list_item_paycounter_place_holder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/list_holder_paycounter_text"/>
    <ImageView android:id="@+id/list_item_paycounter_place_holder_img"
               android:layout_width="56dp"
               android:layout_height="56dp"
               android:src="@drawable/ic_shopping_basket_black_24dp"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="16dp"
               android:layout_above="@id/list_item_paycounter_place_holder_tv"/>

</RelativeLayout>